{
  "name": "labpics-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.js",
    "start": "tsx src/index.js",
    "migrate": "node db/migrate.js",
    "worker": "tsx src/worker.ts",
    "worker:loop": "tsx src/worker-loop.ts",
    "test": "tsx --test test/**/*.test.js",
    "test:coverage": "c8 --reporter=text --reporter=lcov tsx --test test/**/*.test.js",
    "test:coverage:ci": "c8 --reporter=text --reporter=lcov --reporter=json-summary tsx --test test/**/*.test.js && node scripts/check-coverage-gates.mjs",
    "test:integration:lightrag": "tsx --test test/lightrag-db-redis.integration.test.js",
    "test:migrations:idempotency": "node scripts/check-migrations-idempotency.mjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "ioredis": "^5.9.3",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "tsx": "^4.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "c8": "^10.1.3",
    "typescript": "~5.8"
  }
}
